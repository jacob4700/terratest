    disk_size_gb      = 32
    lun               = 0
    create_option     = "Empty"
  }

  storage_data_disk {
    name              = "datadisk"
    managed_disk_type = "Premium_LRS"
    disk_size_gb      = 256
    lun               = 1
    create_option     = "Empty"
  }

  os_profile {
    computer_name  = "C0714APP01"
